<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Selfie With Fame - Create an Event</title>
    <link rel="manifest" href="/manifest.json">
    <script src="/javascripts/idb.js"></script>

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Leaflet Map Javascript and stylesheet -->
    <link rel="stylesheet" href="/stylesheets/leaflet.css" />
    <script src="/javascripts/leaflet.js"></script>

    <!-- Custom styles for this template -->
    <link href="/stylesheets/clean-blog.min.css" rel="stylesheet">
</head>

<body onload="initServiceWorker()">

<!-- Navigation -->
<% include templates/navbar.ejs %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/images/events-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <div class="container">
                        <h3>Create an Event</h3>
                    </div>

                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <form id="xForm" onsubmit="onSubmit('/post_event', '/')">
        <div class="form-row">
            <div class="form-group col-auto">
                <label for="name">Event Name:</label>
                <input type="text" class="form-control" name="name" placeholder="Name" required>
            </div>
            <div class="form-group col-auto">
                <label for="date">Date: </label>
                <input type="date" class="form-control" name="date" required>
            </div>
        </div>
        <div class="form-group col-auto">
            <label for="description">Description:</label>
            <textarea class="form-control" name="description" rows="3" placeholder="Tell us about the event..." required></textarea>
        </div>

        <!-- Validation -->
        <div class="<div class=alert alert-danger alert-dismissible fade show" role="alert" id="locationAlert" style="display:none;">
            Please add location information
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <button type="button" onclick="showMap()" class="btn-outline-success btn-sm">Add Location</button>
        <br><br>
        <div id="mapSection" style="display: none">
            <div class="form-row">
                <div class="form-group col-auto">
                    <label for="latitude">Latitude:</label>
                    <input type="text" class="form-control" id="latitude" name="latitude">
                    <small id="locationHelp" class="form-text text-muted">Click on the map to add a location</small>
                </div>
                <div class="form-group col-auto">
                    <label for="longitude">Longitude:</label>
                    <input type="text" class="form-control" id="longitude" name="longitude">
                </div>
            </div>
            <!-- Leaflet Map -->
            <div id="mapid" style="height: 400px; width:800px">
            </div>
        </div>
        <br><br>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>
<hr>

<!-- Footer -->
<% include templates/footer.ejs %>


<!-- Bootstrap core JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Custom scripts for this template -->
<script src="/javascripts/clean-blog.min.js"></script>
<script src="/javascripts/app.js"></script>
<script src="/javascripts/database.js"></script>

</body>

</html>