<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Selfie With Fame - Event</title>
    <link rel="manifest" href="/manifest.json">
    <script src="/javascripts/idb.js"></script>

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Leaflet Map Javascript and stylesheet -->
    <link rel="stylesheet" href="/stylesheets/leaflet.css" />
    <script src="/javascripts/leaflet.js"></script>

    <!-- Custom styles for this template -->
    <link href="/stylesheets/clean-blog.min.css" rel="stylesheet">
</head>

<body onload="initServiceWorker(); getEventById(<%= JSON.stringify(id) %>)">

<% include templates/navbar.ejs %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/images/events-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1 id="title"></h1>
                    <span id="subheading" class="subheading"></span>
                    <span id="date" class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col">
            <!-- Leaflet Map -->
            <div id="mapid" style="height: 400px; width:800px">
            </div>

            <hr>
            <p>User Stories from this event</p>

            <hr>
            <!-- User Stories -->
            <div id="stories" class="col-lg-8 col-md-10 mx-auto">
            </div>

            <hr>

            <%  if (user) { %>
                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        <form onsubmit='onSubmit("/post_comment", "<%= "/events/"+ id %>")'>
                            <div class="form-group">
                                <textarea name="comment" class="form-control" rows="3" required></textarea>
                                <input type="text" name="id" value=<%= id %> style="display: none;">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            <% } %>

            <h4> Comments </h4>
            <br>
            <!-- Coomets section form page template -->
            <!-- Single Comment -->

            <!--<img class="d-flex mr-3 rounded-circle" src="" alt="">-->
            <div id="comments" class="col-lg-8 col-md-10 mx-auto">
            </div>

            </div>
        </div>
    </div>
</div>

<hr>

<!-- Footer -->
<% include templates/footer.ejs %>


<!-- Bootstrap core JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Custom scripts for this template -->
<script src="/javascripts/clean-blog.min.js"></script>
<script src="/javascripts/app.js"></script>
<script src="/javascripts/database.js"></script>
<script src="/javascripts/events.js"></script>
<script src="/javascripts/map.js"></script>

</body>

</html>