<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Selfie With Fame - Profile</title>
    <link rel="manifest" href="/manifest.json">
    <script src="/javascripts/idb.js"></script>

    <!-- Stylesheet -->
    <link href="/stylesheets/style.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="/stylesheets/clean-blog.min.css" rel="stylesheet">


</head>

<body onload="initServiceWorker()">

<% include templates/navbar.ejs %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/images/events-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1><%= name %></h1>
                    <span class="subheading">Author Profile</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <% include templates/messages.ejs %>

    <h2>About</h2>
    <p class="text-center"><b>Email:</b> <%= email %> | <b>Username:</b> <%= username %></p>
    <div class="row">
        <div id="wrapper">
                <% if (avatar == '') { %>
                <img src="/images/profile_pic_blank.png" class="profile_pic" alt="...">
                <% } else { %>
                <img src="/user-images/avatars/<%= avatar %>" class="profile_pic" alt="...">
                <% } %>
                <div class="about">
                    <p><%= about %></p>
                </div>
        </div>
        <% if (user !== undefined) { %>
            <% if(user.username === username) { %>
                <label><a href="/edit_profile">Edit your details</a></label> | <label><a href="/edit_photo">Update profile picture</a></label>
            <% } %>
        <% } %>
    </div>
</div>

<hr>

<!-- Footer -->
<% include templates/footer.ejs %>

<!-- Bootstrap core JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Custom scripts for this template -->
<script src="/javascripts/clean-blog.min.js"></script>
<script src="/javascripts/app.js"></script>
<script src="/javascripts/database.js"></script>

</body>

</html>